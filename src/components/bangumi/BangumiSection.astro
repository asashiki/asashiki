---
import type { UserSubjectCollection } from "@/types/bangumi";
import Card from "./Card.astro";
import FilterControls from "./FilterControls.astro";
import Pagination from "./Pagination.astro";

interface Props {
  sectionId: string;
  items: UserSubjectCollection[];
  isActive: boolean;
  itemsPerPage?: number;
    subjectType: number; 
}

const { sectionId, items, isActive, itemsPerPage = 12, subjectType } = Astro.props;

// 状态映射
const statusMap = {
  1: "wish",
  2: "collect",
  3: "doing",
  4: "on_hold",
  5: "dropped",
};

const filterLabelMap = {
  // 默认分类（动画、书籍等）
  default: {
    collect: "看过",
    doing: "在看",
    wish: "想看",
    on_hold: "搁置",
    dropped: "抛弃",
    all: "全部"
  },
  // 游戏分类（subjectType=4）
  game: {
    collect: "玩过",
    doing: "在玩",
    wish: "想玩",
    on_hold: "搁置",
    dropped: "抛弃",
    all: "全部"
  }
};

// 选择当前分类对应的文本映射
const currentLabelMap = subjectType === 4 ? filterLabelMap.game : filterLabelMap.default;

// Get status filters with counts
const statusCounts = items.reduce(
  (acc, item) => {
    const status = statusMap[item.type as keyof typeof statusMap] || "unknown";
    acc[status] = (acc[status] || 0) + 1;
    return acc;
  },
  {} as Record<string, number>,
);

const filters = [
  { value: "all", label: currentLabelMap.all, count: items.length },
  { value: "collect", label: currentLabelMap.collect, count: statusCounts.collect || 0 },
  { value: "doing", label: currentLabelMap.doing, count: statusCounts.doing || 0 },
  { value: "wish", label: currentLabelMap.wish, count: statusCounts.wish || 0 },
  { value: "on_hold", label: currentLabelMap.on_hold, count: statusCounts.on_hold || 0 },
  { value: "dropped", label: currentLabelMap.dropped, count: statusCounts.dropped || 0 },
].filter((filter) => filter.value === "all" || filter.count > 0);

const defaultFilter = "all"; // 默认显示全部，用户可以通过筛选器选择
---

<div class:list={["bangumi-section", { "hidden": !isActive }]} data-section={sectionId}>
  {items.length > 0 ? (
    <>
      <FilterControls
        filters={filters}
        activeFilter={defaultFilter}
        sectionId={sectionId}
      />

      <div class="grid grid-cols-2 md:grid-cols-3 gap-6 md:gap-8">
        {items.map((item) => (
          <div
            class="bangumi-item"
            data-item-section={sectionId}
            data-item-status={statusMap[item.type as keyof typeof statusMap] || "unknown"}
          >
            <Card item={item} />
          </div>
        ))}
      </div>

      <Pagination
        totalItems={items.length}
        itemsPerPage={itemsPerPage}
        currentPage={1}
        sectionId={sectionId}
      />
    </>
  ) : (
    <div class="text-center py-12">
      <h3 class="text-xl font-medium text-gray-600 dark:text-gray-400 mb-2">暂无数据</h3>
      <p class="text-gray-500 dark:text-gray-500">该分类下还没有任何条目</p>
    </div>
  )}
</div>